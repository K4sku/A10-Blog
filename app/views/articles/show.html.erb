<h2 align="center"><%= @article.title %> </h2>

<div class="card" style="width: 70rem;">
  <div class="card-body">
    <h5 class="card-title">Created by: <%= link_to @article.user.username, user_path(@article.user) %></h5>
    <h4 class="card-title">Description:</h4>
      <p class="card-text">
        <%= simple_format(@article.description) %>
      </p>
      <p class="card-text">
        <small class="text-muted">
          Created by: <%= @article.user.username if @article.user %>
          <%= time_ago_in_words(@article.created_at) %> ago,
          last updated: <%= time_ago_in_words(@article.updated_at) %> ago.
        </small>
      </p>

    <div class="articles-actions">
      <% if logged_in? && current_user == @article.user %>
        <%= link_to 'Delete', articles_path, method: :delete,
                    data: {confirm: 'Are you sure you want to delete the article?'},
                    class: 'btn btn-sm btn-danger card-link' %>
        <%= link_to 'Edit', edit_article_path, class: 'btn btn-sm btn-success' %>
        <% end %>
      <%= link_to 'Back to list', articles_path, class: 'btn btn-sm btn-primary' %>
    </div>
  </div>
</div>