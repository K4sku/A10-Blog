<%= render 'shared/errors', obj: @article %>

<%= form_for @article do |f| %>
    <div class="form-group row">
      <div class="col-sm-2 text-right font-weight-bold">
        <%= f.label :title, class:'col-form-label ' %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title, class:'form-control', placeholder:'Article Title' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2 text-right font-weight-bold">
        <%= f.label :description, class:'col-form-label' %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, class:'form-control', placeholder:'Article'  %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-6">

        <%= link_to 'Back to list', articles_path, class:"btn btn-secondary btn-large"  %>
        <%= f.submit class:'btn btn-primary btn-large' %>
      </div>
    </div>

<% end %>
