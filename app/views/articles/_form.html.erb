<% if @article.errors.any? %>
    <h2>Errors prevented from saving article</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
          <li> <%= msg %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for @article do |f| %>
    <div class="form-group row">
      <%= f.label :title, class:'col-sm-2 col-form-label' %>
      <div class="col-sm-8">
        <%= f.text_field :title, class:'form-control', placeholder:'Article Title' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :description, class:'col-sm-2 col-form-label' %>
      <div class="col-sm-8">
        <%= f.text_area :description, class:'form-control', placeholder:'Article'  %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-8">
        <%= f.submit class:'btn btn-primary btn-large' %>
      </div>
    </div>

    <p>
      <%= link_to 'Back to list', articles_path %>
    </p>

<% end %>
