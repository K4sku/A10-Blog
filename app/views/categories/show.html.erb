<div class="row">
  <h2 class="offset-sm-4 col-sm-4"><%= 'Category: ' + @category.name %></h2>
  <% if logged_in? && current_user.admin? %>
    <div class="offset-sm-2 col-sm-1">
      <%= link_to 'Edit category', edit_category_path(@category), class: 'btn btn-sm btn-primary' %>
    </div>
    <% end %>
</div>

<div class="pagination justify-content-center">
  <%= will_paginate @category_articles %>
</div>

<%= render 'articles/article', obj: @category_articles %>

<div class="pagination justify-content-center pagination-bottom">
  <%= will_paginate @category_articles %>
</div>